// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NavItem {
  id   Int    @id @default(autoincrement())
  text String
  test String
  href String
}

model PanelLink {
  id    Int     @id @default(autoincrement())
  href  String
  text  String
  Panel Panel[]
}

model Panel {
  id          Int       @id @default(autoincrement())
  direction   String
  link        PanelLink @relation(fields: [panelLinkId], references: [id])
  excerpt     String
  title       String
  panelLinkId Int
}
